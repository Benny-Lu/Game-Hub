@{
    ViewData["Title"] = "Home Page";
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        * {
            box-sizing: border-box;
        }

        .column {
            float: left;
            width: 25%;
            padding: 5px;
        }

        /* Clearfix (clear floats) */
        .row::after {
            content: "";
            clear: both;
            display: table;
        }

        img:hover{
            transform: scale(1.02);
            transition: all 0.25s;
        }

    </style>
</head>

<body>
    <h4>Latest News!</h4>
    <a href="@Url.Action("FortniteNews","Home")">
        <img src="~/Fortnite.PNG" alt="Logo" width="700" height="400" />
    </a>
    <p>Fortnite Season 8 Chapter 2 has finally released!</p>


    <div class="row">
        <div class="column">
            <a href="@Url.Action("LOLNews","Home")">
                <img src="~/LOL.jpg" alt="Logo" width="258" height="160">
            </a>
            <p>3 Days left till Worlds!</p>
        </div>
        <div class="column">
            <a href="@Url.Action("Valorant","Home")">
                <img src="~/Valorant.jpg" alt="Logo" width="258" height="160" />
            </a>
            <p> Valorant Championship Tournament coming soon!</p>
        </div>
        <div class="column">
            <a href="@Url.Action("CSGO","Home")">
                <img src="~/csgo.jpg" alt="Logo" width="258" height="160">
            </a>
            <p>Introduction Operation Riptide</p>
        </div>
        <div class="column">
            <a href="@Url.Action("MinecraftNews","Home")">
                <img src="~/minecraft.jpg" alt="Logo" width="258" height="160" />
            </a>
            <p>Minecraft Cave update is out!</p>
        </div>
    </div>
</body>

